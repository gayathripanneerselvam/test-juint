pipeline {
agent any
tools {
maven 'maven-3.5.2'
jdk 'jdk1.8'
}
stages {
stage ('Initialize') {
steps {
sh '''
echo "PATH = ${PATH}"
echo "M2_HOME = ${M2_HOME}"
'''
}
}
stage('git-clone') {
steps {
git 'https://github.com/kliakos/sparkjava-war-example.git'
  }
  }
  stage('compile'){
  steps {
    sh 'mvn package'
  }
  
	post {
	success {
	emailext (
    subject: "Job '${env.JOB_NAME} ${env.BUILD_NUMBER}'",
    body: """<p>Check console output at <a href="${env.BUILD_URL}">${env.JOB_NAME}</a></p>""",
    to: "gayathri.p@royalcyber.com",
    from: "gayathri.p@royalcyber.com"
)
}
}
}
 stage('s3-copy'){
 steps{
 s3Upload(file:'sparkjava-hello-world-1.0.war', bucket:'gayathri-jenkins-poc', path:'target/sparkjava-hello-world-1.0.war')
 }}

	}
	}
