pipeline {
agent any
tools {
maven 'maven-3.5.2'
jdk 'jdk1.8'
}
stages {
stage ('Initialize') {
steps {
sh '''
echo "PATH = ${PATH}"
echo "M2_HOME = ${M2_HOME}"
'''
}
}
stage('git-clone') {
steps {
git 'https://github.com/kliakos/sparkjava-war-example.git'
  }
  }
  stage('compile'){
  steps {
    sh 'mvn package'
  }
  }
  stage ('Deploy'){
  steps {
sshagent(['2e343adf-e8d9-4bf0-a372-90aff675fa40']) {
    sh "scp -o StrictHostKeyChecking=no target/*.war admin@13.232.175.7:/opt/tomcat/webapps"
}
	}
	post {
	success {
	emailext (
    subject: "Job '${env.JOB_NAME} ${env.BUILD_NUMBER}'",
    body: """<p>Check console output at <a href="${env.BUILD_URL}">${env.JOB_NAME}</a></p>""",
    to: "gayathri.p@royalcyber.com",
    from: "gayathri.p@royalcyber.com"
)
}
}
 
}
	}
	}
